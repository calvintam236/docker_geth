FROM debian:buster-slim

LABEL maintainer="calvintam236"
LABEL description="geth in Docker. Full node. Supports CPU mining."

WORKDIR /tmp/

ADD \
https://gethstore.blob.core.windows.net/builds/geth-linux-amd64-1.10.3-991384a7.tar.gz \
.

RUN \
tar -xvf geth-linux-amd64-1.10.3-991384a7.tar.gz \
&& mv geth-linux-amd64-1.10.3-991384a7/geth /usr/local/bin/ \
&& chmod +x /usr/local/bin/geth \
&& rm -r *

ENTRYPOINT ["geth"]
CMD ["--help"]
